{
	"format_version": "1.19.20",
	"minecraft:block": {
		"description": {
			"identifier": "bridge:cable",
			"is_experimental": false,
			"properties": {
				"bridge:north": [
					0,
					1
				],
				"bridge:east": [
					0,
					1
				],
				"bridge:south": [
					0,
					1
				],
				"bridge:west": [
					0,
					1
				],
				"bridge:up": [
					0,
					1
				],
				"bridge:down": [
					0,
					1
				]
			}
		},
		"components": {
			"minecraft:geometry": "geometry.cable",
			"minecraft:material_instances": {
				"*": {
					"texture": "bridge_cable",
					"render_method": "alpha_test"
				}
			},
			"minecraft:collision_box": {
				"origin": [
					-2,
					6,
					-2
				],
				"size": [
					4,
					4,
					4
				]
			},
			"minecraft:breathability": "air",
			"minecraft:block_light_filter": 0,
			"minecraft:part_visibility": {
				"conditions": {
					"up": "query.block_property('bridge:up') == 1",
					"down": "query.block_property('bridge:down') == 1",
					"north": "query.block_property('bridge:north') == 1",
					"east": "query.block_property('bridge:east') == 1",
					"south": "query.block_property('bridge:south') == 1",
					"west": "query.block_property('bridge:west') == 1"
				}
			},
			"minecraft:queued_ticking": {
				"on_tick": {
					"event": "bridge:update_connections"
				},
				"looping": true,
				"interval_range": [
					10,
					10
				]
			},
			"tag:bridge:power_connector": {}
		},
		"events": {
			"bridge:update_connections": {
				"sequence": [
					{
						"set_block_property": {
							"bridge:up": "query.block_neighbor_has_any_tag(0, 1, 0, 'bridge:power_connector')"
						}
					},
					{
						"set_block_property": {
							"bridge:down": "query.block_neighbor_has_any_tag(0, -1, 0, 'bridge:power_connector')"
						}
					},
					{
						"set_block_property": {
							"bridge:north": "query.block_neighbor_has_any_tag(0, 0, -1, 'bridge:power_connector')"
						}
					},
					{
						"set_block_property": {
							"bridge:east": "query.block_neighbor_has_any_tag(1, 0, 0, 'bridge:power_connector')"
						}
					},
					{
						"set_block_property": {
							"bridge:south": "query.block_neighbor_has_any_tag(0, 0, 1, 'bridge:power_connector')"
						}
					},
					{
						"set_block_property": {
							"bridge:west": "query.block_neighbor_has_any_tag(-1, 0, 0, 'bridge:power_connector')"
						}
					}
				]
			}
		}
	}
}